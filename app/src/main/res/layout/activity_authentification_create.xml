<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentification_create"
    android:background="@color/white">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/lo"
        android:layout_marginBottom="15dp"
        android:paddingLeft="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="#3F51B4"
        android:textStyle="bold"
        android:textSize="25sp"></TextView>

    <LinearLayout
        android:layout_below="@id/lo"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">



        <EditText
            android:paddingRight="16dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#C3C1C1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="7dp"
            android:id="@+id/fullname"
            android:layout_margin="7dp"
            android:hint="add full name"
            android:background="@drawable/auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></EditText>

        <EditText
            android:paddingRight="16dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#C8C7C7"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="7dp"
            android:id="@+id/username"
            android:layout_margin="7dp"
            android:hint="add username"
            android:background="@drawable/auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></EditText>

        <EditText
            android:paddingRight="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#C5C3C3"
            android:inputType="textEmailAddress"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="7dp"
            android:id="@+id/cemail"
            android:layout_margin="7dp"
            android:hint="add email"
            android:background="@drawable/auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></EditText>

        <EditText
            android:paddingRight="16dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#C5C3C3"
            android:background="@drawable/auth"
            android:hint="add password"
            android:layout_margin="7dp"
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:inputType="textPassword"
            android:paddingBottom="15dp"></EditText>

        <EditText
            android:paddingRight="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#C5C3C3"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="7dp"
            android:id="@+id/confirme_password"
            android:layout_margin="7dp"
            android:inputType="textPassword"
            android:hint="confirme password"
            android:background="@drawable/auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></EditText>

        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="#3F51B4"
                android:text="By signing up your accept the"
                android:textColor="#878484" />
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="#2196F3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="term of services"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="49dp"
                android:textColor="#878484"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and"></TextView>
            <TextView
                android:layout_marginLeft="3dp"
                android:textColor="#2196F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"></TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button

                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn"
                android:foregroundGravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white"></Button>

            <ProgressBar

                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:indeterminateTint="#3F51B4"
                android:progressTint="#3F51B4" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentBottom="true">
        <TextView
            android:textColor="#A6A6A6"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="already have an account ?  "
            android:textStyle="bold"></TextView>
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#3F51B4"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"></TextView>
    </LinearLayout>

</RelativeLayout>